<script type="text/javascript">
    $(function () {
         $("#Engraving").on('change',function () {
            if ($(this).val() == "Add Engraving +$30") {
                $("#PdpForm2").show();
                $("#your-name-for-engraving").val('');
                $("#print-name-for-engraving").text('');
                $('#PdpForm2 input[type="radio"]:checked').each(function(){
                     $(this).prop('checked', false);
                });
            } else {
                $("#PdpForm2").hide();
                $("#your-name-for-engraving").val('');
                $("#print-name-for-engraving").text('');
                $('#PdpForm2 input[type="radio"]:checked').each(function(){
                     $(this).prop('checked', false);
                });
            }
        });
    });
  
</script>

<script>
  
	$(document).ready(function() 
	{
	    $('#your-name-for-engraving').keyup(function(e) {
	        var txtVal = $(this).val();
	        $('#print-name-for-engraving').text(txtVal);
          
	    });
            if ($("#Engraving").val() == "Add Engraving +$30") {
                $("#PdpForm2").show();
                $("#your-name-for-engraving").val('');
                $("#print-name-for-engraving").val('');
                $('#PdpForm2 input[type="radio"]:checked').each(function(){
                     $(this).prop('checked', false);
                });
            } else {
                $("#PdpForm2").hide();
                $("#your-name-for-engraving").val('');
                $("#print-name-for-engraving").val('');
                $('#PdpForm2 input[type="radio"]:checked').each(function(){
                     $(this).prop('checked', false);
                });
            }
});
</script>
  <script>
  
  $(document).ready(function(){
    $("#selectedFont").on("click",function(){
      $(".fontFamilyList").toggleClass("hidden")
    })

     $(".fontFamilyList li a").on("click",function(){
      var dataFont = $(this).attr("data-font");
      $("#selectedFont").find('span').text(dataFont.replaceAll("'",''))
       $("#selectedFont").css({"font-family":dataFont})
         $("#print-name-for-engraving").css({"font-family":dataFont})
      $(".fontFamilyList").toggleClass("hidden")
    })
  })
</script>
